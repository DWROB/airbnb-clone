
<h1>Here are some of the favorite stays</h1>
<div class="content" style="margin: 10px">
  <div class="cards">
    <% @apartments.each do |apartment| %>
      <%= link_to apartment_path(apartment), class: "card-apartment" do %>
        <div>
          <div class="position-relative">
            <%= cl_image_tag apartment.photos[0].key, height: 300, class: "mb-2" %>
            <p class="position-absolute tag-location"><%= apartment.address %></p>
            <p class="position-absolute tag-rating"><%= apartment.rating %>⭐️</p>
          </div>
          <p class="card-apartment-description"><%= apartment.title %> </p>
          <p class="card-apartment-description">Owner: <%= apartment.user.first_name %> <%= apartment.user.last_name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div id="map-box"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
