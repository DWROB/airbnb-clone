<h1>Here are some of the favorite stays</h1>

<div class="content" style="margin: 120px">
  <div class="cards">
    <% @apartments.each do |apartment| %>
      <%= link_to apartment_path(apartment), class: "card-apartment" do %>
        <div>
          <div class="position-relative">
            <%= cl_image_tag apartment.photos[0].key, height: 300, width: "100%", class: "mb-2" %>
            <p class="position-absolute tag-location"><%= apartment.address %></p>
          </div>
          <p class="card-apartment-description"><%= apartment.title %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="map-box" style="width: 100%; height: 100vh; position: sticky; top: 0;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
